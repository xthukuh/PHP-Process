	"keywords": ["php","wrapper","class","proc_open","proc_close","proc_terminate","windows","linux","process","open","close","kill","output","buffer","callback","child","pid"],
	"type": "library",
	"license": "GPL-3.0",
	"autoload": {
		"psr-4": {
			"xthukuh\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"authors": [
		{
			"name": "Thuku Wanjiku",
			"homepage": "https://github.com/xthukuh",
            "role": "Developer"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.3.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.3.3"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	}
}
